<div class="container mt-5">
  <div class="cards" data-controller="hello">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant), class: 'card-wrapper' do %>
        <div data-target="hello.card" class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= restaurant.photo_url %>)">
          <%= restaurant.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
